{
    "manifest_version": 3,
    "name": "Chat GPT Export",
    "version": "0.0.1",
    "description": "Export options for singular chat instances of ChatGPT",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon2.png",
            "48": "icon2.png",
            "128": "icon2.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "128": "icon.png"
    },
    "id": "com.chatgpt.export"
}